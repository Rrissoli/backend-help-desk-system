{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended", 
      "plugin:prettier/recommended" 
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "lf",
          "singleQuote": true, 
          "trailingComma": "es5", 
          "semi": true 
        }
      ],
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  }
  